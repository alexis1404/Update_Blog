{% extends ':Blog_pages:base.html.twig' %}

{% block body %}
    <body background="{{ asset('res/Background.jpg') }}" style="background-attachment: fixed ">
    <<h1 align="center" style="font-family:'Indie Flower', cursive; font-size: 300% ">Welcome everybody!</h1>
    <div style="width: 50%; background-color:rgba(132, 112, 255, 0.6); padding: 12px; border-radius: 20px; font-family:'Indie Flower';
     position: absolute; left: 25%">
        {% for post in allpost %}
            <h1><p align="center">{{ post.postName|default(' ') }}</p></h1>
            <p> </p>
            {% if post.absolutePath != 'load/image/NULL' %}
                <img width="550" height="380" src="{{ asset(post.absolutePath) }}" style="position: relative; left: 15%; border: 5px double; border-color: #565656; padding: 5px">
            {% endif %}
            <p> </p>
            <p style="font-family: 'Lobster', cursive; font-size: 130%; color: #333333">{{ post.postText[:300]|default(' ')|nl2br }}...</p>
            <p> </p>
            <p><i>{{ post.postDate|date('Y-m-d')|default(' ')}}</i></p>
            <p>  </p>
            <a href="{{ path('read_post', {'post': post.id|default('1')}) }}" class="button_allpost">Читать дальше</a>
            <p> </p>
            <hr>
        {% endfor %}
    </div>
    <a href="{{ path('admin_page') }}"><img src="{{ asset('res/Admin_1.jpg') }}" border="0" alt="Go admin" width="200" height="130" style="position: absolute;
    left: 85%"></a>
    </body>
{% endblock %}
{% block exit %}
     </div>
    <a href="{{ path('logout') }}"><img src="{{ asset('res/Exit.gif') }}" border="0"; alt="Exit"; width="130"; height="70" style="position: absolute; left: 90%; top: 5%"></a>
    </body>
{% endblock %}
